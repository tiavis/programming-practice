import random

file_name = input("What is the name of the file: ")

line_count = int(input("How many lines are in the file: "))

random_return = input("How many lines do you want returned: ")

random_return_as_int = int(random_return)

random_number_set = []
records_to_return = []

while len(random_number_set) != random_return_as_int:
    new_random_number = random.randint(1, line_count)
    if new_random_number not in random_number_set:
        random_number_set.append(new_random_number)
        
read_file_position = 1
with open(file_name + ".csv") as data:
    for line in data:
        if (read_file_position in random_number_set):
            records_to_return.append(line)
        read_file_position += 1
        
new_file = open("Returned_Random_Records" + random_return + ".csv","w+")
for record in records_to_return:
    new_file.write(record)
new_file.close()

